# Golf Weather API - Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# DATABASE (Railway provides this automatically)
# =============================================================================
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=

# =============================================================================
# REDIS (Railway provides this automatically)
# =============================================================================
# Format: redis://default:password@host:port
REDIS_URL=

# =============================================================================
# API KEYS (Generate with: python scripts/generate_api_key.py <name>)
# =============================================================================
# Format: APIKEY_<CLIENTNAME>=<sha256_hash>
APIKEY_INRANGE_PROD=
APIKEY_INRANGE_TEST=
APIKEY_ADMIN=

# Admin key for /admin/* endpoints
ADMIN_KEY_HASH=

# =============================================================================
# WEATHER API
# =============================================================================
# Get a key from https://www.weatherapi.com/
WEATHER_API_KEY=

# =============================================================================
# ERROR TRACKING (Optional)
# =============================================================================
# Get a DSN from https://sentry.io/
SENTRY_DSN=

# =============================================================================
# CORS (comma-separated origins)
# =============================================================================
CORS_ORIGINS=https://app.inrangegolf.com,https://admin.inrangegolf.com,http://localhost:3000

# =============================================================================
# SENDGRID EMAIL (for automated emails)
# =============================================================================
# Get API key from https://sendgrid.com/
SENDGRID_API_KEY=
FROM_EMAIL=noreply@golfphysics.io
REPLY_TO_EMAIL=golfphysicsio@gmail.com
ADMIN_EMAIL=golfphysicsio@gmail.com

# =============================================================================
# RECAPTCHA (for spam protection)
# =============================================================================
# Get keys from https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
